<h1>Editing Book</h1>
<%= form_with model: @book,url: update_book_path(@book.id),local:true do |f| %>

<div class = "field">
<h4>Title</h4>
<%= f.text_field :title %>
</div>

<div class = "field">
<h4>Body</h4>
<%= f.text_area :body %>
</div>
<br><%= f.submit 'Update Book' %></br>
<p><%= link_to "Show" ,book_path(@book.id)%>| <a href ="/books">Back</a></p>

<% end %>
