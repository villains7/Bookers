<body>
  <p id = "notice"><%= flash[:delete] %></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @books.each do |book| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show",book_path(book.id) %></td>
    <td><%= link_to "Edit",edit_book_path(book.id) %></td>
    <td><%= link_to "Destroy",destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
</tbody>
</table>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>
<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>

<div class = "field">
<h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class = "field">
<h4>Body</h4>
<%= f.text_area :body %>
</div>

<div class = "actions">
<br><%= f.submit 'Create Book' %></br>
</div>

<% end %>
</body>